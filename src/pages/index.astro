  <body class="bg-gradient-to-b from-sky-100 bg-sky-800">
    <main
      class="max-w-sm w-screen min-h-screen mx-auto shadow-lg py-20 px-5 flex flex-col items-stretch justify-center"
    >
      <div
        class="kotak rounded-lg w-[160px] min-h-[160px] h-[160px] self-center"
      >
        <img
          class="w-full h-full rounded-full"
          src="dist/foto/heru.jpg"
          width="640"
          height="360"
          alt="
          Heru
          Septia
          Hutowi"
        />
      </div>

      <div class="flex text-sky-50 flex-col items-center mt-8">
        <h1 class="text-2xl font-bold text-sky-800">Heru Septia Hutowi</h1>
        <p class="font-bold text-sky-100">Data Engineer</p>
      </div>

      <ul class="mt-10 space-y-3">
        {
          links.map((link) => (
            <li class="hover:-translate-y-1 transition duration-150 hover:shadow">
              <a href={link.url}>
                <div class="kotak font-semibold text-lg text-white text-center tracking-wide rounded-lg w-full bg-sky-700 hover:bg-sky-800 duration-150 px-10 py-6">
                  {link.name}
